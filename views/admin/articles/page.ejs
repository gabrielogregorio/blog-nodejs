<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<body>
  <div class="container">
    <hr>
    <% result.articles.rows.forEach(article => { %>
      <div class="card">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
        </div>
      </div>
    <% }) %>

    <div class="next">
      <div class="col col-12" style="display: flex; justify-content: space-between;">
        <% if (result.page > 2 ) {%>
          <a href="/articles/page/<%= result.page -1 %>">  &lt;&lt;&lt; Prev </a>
        <% } else if (result.page == 2) { %>
          <a href="/">  &lt;&lt;&lt; Prev </a>
        <% } %>


        <% if (result.next) {%>
          <a href="/articles/page/<%= result.page +1 %>"> Next &gt;&gt;&gt;</a>
        <% } %>
      </div><!-- col col-12 -->
      <hr>
    </div><!-- next-->
    <hr>


  </div>
</body>
<%- include('../../partials/footer.ejs') %>
